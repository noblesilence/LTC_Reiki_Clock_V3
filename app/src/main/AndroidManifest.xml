<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.learnteachcenter.ltcreikiclockv3">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:name=".app.ReikiApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity
                android:name=".splash.SplashActivity"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".authentication.signup.SignUpActivity"
                  android:windowSoftInputMode="stateVisible">
        </activity>

        <activity android:name=".authentication.login.LoginActivity"
                  android:windowSoftInputMode="stateVisible">
        </activity>

        <activity
                android:name=".reiki.list.ReikiListActivity"
                android:launchMode="singleTask">
        </activity>

        <activity android:name=".reiki.add.AddReikiActivity"
                  android:windowSoftInputMode="stateVisible">
        </activity>

        <activity android:name=".reiki.edit.EditReikiActivity"
                  android:windowSoftInputMode="stateVisible">
        </activity>

        <activity
                android:name=".position.list.PositionListActivity"
                android:launchMode="singleTask">
        </activity>

        <activity android:name=".position.add.AddPositionActivity"
                  android:windowSoftInputMode="stateVisible">
        </activity>

        <activity android:name=".position.edit.EditPositionActivity"
                  android:windowSoftInputMode="stateVisible">
        </activity>

    </application>

</manifest>