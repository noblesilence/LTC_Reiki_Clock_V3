<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/root_fragment_position_list"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransparentBlack"
        tools:context=".reiki.positionlist.PositionListActivity">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/toolbarWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarAllPositions"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/positionsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarWrap"
            app:layout_constraintBottom_toTopOf="@id/fab_add_position"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/lbl_position_prompt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/prompt_new_position"
            android:textColor="@color/ALPHA_WHITE"
            android:fontFamily="sans-serif-medium"
            android:background="@color/colorPrimaryLight"
            android:textSize="34sp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1" />

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_stop"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_stop"
            android:tint="@android:color/white"
            app:backgroundTint="@color/colorAccent"
            app:elevation="6dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fab_play_pause"
            app:rippleColor="@color/colorTransparentBlack"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_play_pause"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_play_arrow"
            android:tint="@android:color/white"
            app:backgroundTint="@color/colorAccent"
            app:elevation="6dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/fab_stop"
            app:layout_constraintRight_toLeftOf="@id/fab_add_position"
            app:rippleColor="@color/colorTransparentBlack"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_add_black_24dp"
            app:backgroundTint="@color/colorAccent"
            android:tint="@android:color/white"
            app:elevation="6dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/fab_play_pause"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:rippleColor="@color/colorTransparentBlack"/>

</android.support.constraint.ConstraintLayout>