<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.reiki.ReikiActivity">

    <EditText
            android:layout_width="353dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:text="Title"
            android:ems="10"
            android:id="@+id/titleEditText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="358dp"
            android:layout_height="61dp"
            android:inputType="textMultiLine"
            android:text="Description"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/descriptionEditText" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/titleEditText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <CheckBox android:layout_width="365dp" android:layout_height="30dp"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/descriptionEditText"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
              android:layout_marginStart="28dp" android:text="Play Reiki Music"/>
</android.support.constraint.ConstraintLayout>