<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewmodel"
                type="com.learnteachcenter.ltcreikiclockv3.reiki.one.ReikiViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".reiki.one.ReikiActivity">

        <EditText
                android:layout_width="353dp"
                android:layout_height="57dp"
                android:inputType="textPersonName"
                android:text="@={viewmodel.title}"
                android:ems="10"
                android:id="@+id/titleEditText" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:layout_width="358dp"
                android:layout_height="61dp"
                android:inputType="textMultiLine"
                android:text="@={viewmodel.description}"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/descriptionEditText" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/titleEditText" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"/>
        <CheckBox android:layout_width="365dp" android:layout_height="30dp"
                  android:layout_marginTop="16dp"
                  android:id="@+id/playMusicCheckBox"
                  app:layout_constraintTop_toBottomOf="@+id/descriptionEditText"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
                  android:layout_marginStart="28dp" android:text="Play Reiki Music"/>
        <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:onClick="@{() -> viewmodel.saveReiki()}"
                android:text="@string/save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playMusicCheckBox"/>
    </android.support.constraint.ConstraintLayout>
</layout>