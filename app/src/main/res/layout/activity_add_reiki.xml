<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".reiki.add.AddReikiActivity">

        <android.support.design.widget.AppBarLayout
                android:id="@+id/toolbarWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbarAddReiki"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <EditText
                android:layout_width="353dp"
                android:layout_height="57dp"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/input_reiki_title"
                android:layout_marginStart="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbarWrap" app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="358dp"
                android:layout_height="61dp"
                android:inputType="textMultiLine"
                android:text=""
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/input_reiki_description" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/input_reiki_title" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"/>
        <CheckBox android:layout_width="365dp" android:layout_height="30dp"
                  android:layout_marginTop="16dp"
                  android:id="@+id/ckb_play_music"
                  app:layout_constraintTop_toBottomOf="@+id/input_reiki_description"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
                  android:layout_marginStart="28dp" android:text="Play Reiki Music"/>
        <Button
                android:id="@+id/btn_add_reiki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:text="@string/save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ckb_play_music"/>
    </android.support.constraint.ConstraintLayout>
</layout>